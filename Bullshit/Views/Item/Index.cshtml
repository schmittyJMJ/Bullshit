@{
    @model IEnumerable<Bullshit.Models.Item>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Bullshit Tasks</title>
    </head>

    <body>
        <h2>Bullshit Tasks</h2>
        <h4>@Html.DisplayNameFor(model => model.Description)</h4>
        <ul>
            @foreach(var listItem in Model)
            {
                <li>@Html.DisplayFor(modelItem => listItem.Description)
                    @Html.ActionLink("Details", "Details", new { id = listItem.Id })</li>
            }
        </ul>
        <p>@Html.ActionLink("Add new item", "Create")</p>
    </body>
</html>
}
